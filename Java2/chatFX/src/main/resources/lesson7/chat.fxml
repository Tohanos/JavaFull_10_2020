<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson7.ChatController">
    <MenuBar prefHeight="24.0" prefWidth="400.0" VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
        </Menu>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="434.0" prefWidth="364.0" VBox.vgrow="ALWAYS">
        <VBox prefHeight="434.0" prefWidth="400.0">
            <TextArea fx:id="output" editable="false" prefHeight="412.0" prefWidth="988.0" />
            <HBox prefHeight="22.0" prefWidth="490.0">
                <TextField fx:id="input" onAction="#send" prefHeight="22.0" prefWidth="333.0" />
                <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#send" prefHeight="22.0" prefWidth="87.0" text="SEND" />
            </HBox>
        </VBox>
    </AnchorPane>
</VBox>
